<%= form_for(@address) do |f| %>
  <div class="form-outline mb-4">
    <%= f.text_field :street_address, autofocus: true, required: true, class: "form-control", placeholder: "Address"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.text_field :city, required: true, class: "form-control", placeholder: "City"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.text_field :state, required: true, class: "form-control", placeholder: "State"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.text_field :postal_code, required: true, class: "form-control", placeholder: "Postal Code"%>
  </div>
  <br>
  <div class="form-outline mb-4">
    <%= f.text_field :country, required: true, class: "form-control", placeholder: "Country"%>
  </div>
  <br>
  <div class="form-group mb-4">
    Choose the address type:
    <%= f.select :address_type, [['Billing Address', 'billing'], ['Shipping Address', 'shipping']], class: "form-control", prompt: "Select Address Type" %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary btn-block mb-4" %>
  </div>
<% end %>
