<div class="container mt-5">
  <div class="jumbotron">
    <h1 class="display-4">Welcome to HoopHaven</h1>
    <p class="lead">All your basketball gear in one place!</p>
    <hr class="my-4">
  </div>
</div>

<div class="row">
  <% @categories.each do |category| %>
    <div class="col-md-3">
      <div class="card category-card" style="width: 18rem;">
        <div class="card-body">
          <%= image_tag category.image_url, class: "d-block w-100" %>
          <h5 class="card-title"><%= category.name %></h5>
          <p class="card-text"><%= category.description %></p>
          <%= link_to 'Show More', show_products_path( desired_id: category.name ), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

