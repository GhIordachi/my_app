<!-- _filter_menu.html.erb -->
<%= form_tag products_path, method: :get, class: 'form-inline', id: 'orders-form' do %>

    <%= label_tag :category_id, 'Filter by category:' %>
    <%= select_tag :category_id, options_for_select(Category.all.pluck(:name, :id), params[:category_id]), prompt: 'All'%>

    <%= label_tag :color, 'Filter by color:' %>
    <%= select_tag :color, options_for_select(Product.distinct.pluck(:color).sort, params[:color]), prompt: 'All'%>

    <%= text_field_tag(:search, params[:search]) %>

    <%= submit_tag 'Filter', class: 'btn btn-primary mb-2' %>

<% end %>