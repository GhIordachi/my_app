<section>
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3"><%= @user.first_name + ' ' + @user.last_name %></h5>
            <p class="text-muted mb-1"><%= @user.email %></p>
            <p class="text-muted mb-4"><%= @user.phone_number %></p>
            <div class="d-flex justify-content-center mb-2">
              <%= button_to 'Edit', edit_user_registration_path(@user), method: :get, class: "btn btn-primary" %></td>
            </div>
          </div>
        </div>
        <div class="card mb-4 mb-md-0">
          <div class="card-body">
          <h5 class="mb-3">Credit Card</h5>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.first_name + ' ' + @user.last_name %>Iordachi Gheorghe</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.email %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Phone</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.phone_number %>000000000</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Address</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @address.street_address %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <%= render 'address', address: @address, edit_link: edit_address_path(@address) %>
      </div>
    </div>
  </div>
</section>
