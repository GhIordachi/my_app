<section class="p-4 p-md-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-10 col-lg-6 col-xl-12">
      <div class="card rounded-3">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <h3>Credit Cards</h3>
            <h6>Payment</h6>
          </div>
          <% if current_user.present? && credit_card.card_number.present? %>
          <form action="">
            <% if current_user.present? && credit_card.card_number.present? %>
  <form action="">
    <p class="fw-bold mb-4 pb-2">Saved cards:</p>

    <div class="d-flex flex-row align-items-center mb-4 pb-1">
      <% if ['2', '5'].include?(credit_card.card_number.to_s[0]) %>
        <img class="img-fluid" src="https://img.icons8.com/color/48/000000/mastercard-logo.png" />
      <% elsif credit_card.card_number.to_s.start_with?('4') %>
        <img class="img-fluid" src="https://img.icons8.com/color/48/000000/visa.png" />
      <% end %>
      <div class="flex-fill mx-3">
        <div class="form-outline">
          <input type="text" id="formControlLgXc" class="form-control form-control-lg" value="<%= credit_card.card_number %>" />
          <label class="form-label" for="formControlLgXc">Card Number</label>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-outline mb-4">
          <input type="text" id="cvv" class="form-control" value="<%= credit_card.cvv %>" />
          <label class="form-label" for="cvv">CVV</label>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-outline mb-4">
          <input type="text" id="expiration" class="form-control" value="<%= credit_card.expire %>" />
          <label class="form-label" for="expiration">Expiration Date</label>
        </div>
      </div>
    </div>

    <div class="col-md-2">
      <%= link_to "Edit Card", edit_credit_card_path(credit_card), class: "text-success" %>
    </div>
  </form>
<% else %>
  <div class="col-md-2">
    <%= link_to "Add Card", edit_credit_card_path(credit_card), class: "text-success" %>
  </div>
<% end %>

          </form>
          <% else %>
            <div class="col-md-2">
              <%= link_to "Add Card", edit_credit_card_path(credit_card), class: "text-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>